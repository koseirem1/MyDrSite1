@model IEnumerable<MyDrSite.Models.Author>

@{
    ViewBag.Title = "Yazarlar";
}

<h2>Yazarlar</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"> Yazar Ekle </a>
</p>
<table class="table table-striped table-hover  table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    <a href="@Url.Action("Edit" ,new {id=item.Id}) " class="btn btn-success btn-sm">Düzenle</a>
                   
                    <a href="@Url.Action("Delete",new { id= item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">Sil</a>
                </td>

            </tr>
        }
    </tbody>

</table>


